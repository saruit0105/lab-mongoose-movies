<h2> this page is for editing {{theMovie.title}}</h2>

<form action="/movies/update/{{theMovie.id}}" method="POST">

  <p> Title </p>
  <input type="text" name="title" value="{{theMovie.title}}">

  <p> Year</p>
  <input type="text" name="year" value="{{theMovie.year}}">

  <p> featured </p>

  <select name="theNewFeatured" id="">
    {{#each allCharacters}}
    {{#if this.isTheCorrectCharacter}}
    <option selected='selected' value={{this.id}}>{{this.name}}</option>
    {{else}}
    <option value={{this.id}}>{{this.name}}</option>
    {{/if}}
    {{/each}}

  </select>

  <button> Done editing!</button>
</form>